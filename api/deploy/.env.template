PROJECT_NAME=Suporte Chamados API
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Database
DATABASE_URL=postgresql://suporte_user:CHANGE_PASSWORD@suporte_db:5432/suporte_chamados
DATABASE_URL_ASYNC=postgresql+asyncpg://suporte_user:CHANGE_PASSWORD@suporte_db:5432/suporte_chamados

# Redis
REDIS_URL=redis://suporte_redis:6379/0

# Security
SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_RANDOM_STRING
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS
BACKEND_CORS_ORIGINS=["https://office.inoveon.com.br"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","pdf","doc","docx","txt"]

# Email (opcional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@inoveon.com.br
EMAILS_FROM_NAME=Suporte Inoveon

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# API
API_V1_STR=/api/v1
ROOT_PATH=/api/suporte

# Database Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090